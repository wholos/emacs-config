(package-initialize)
;; Fast configuration for lsp-mode
(use-package lsp-mode
  :ensure t
  :hook (c++-mode . lsp))
;; Fast configuration for lsp-ui
(use-package lsp-ui
  :ensure t
  :after lsp-mode
  :custom
